
@{
    ViewBag.Title = "LanBgYi";
    Layout = "../study/layout.cshtml";
}

<table id="grid" style="width: 1024px" title="用户操作" iconcls="icon-view"></table>

<script type="text/javascript">


    $(function () {
        var columns = [{ field: 'CountryID', checkbox: true, isTableBody: 1, isFormBody: 1, type: "hidden" },   //选择
        { title: '导航项目名称', field: 'CountryName', width: 100, isTableBody: 2, isFormBody: 2, type: "text" },
        { title: '导航项目优势', field: 'CountryYouShi', width: 300, isTableBody: 3, formatter: function (val) { if ($("<div>" + val + "</div>").text().length > 22) return $("<div>" + val + "</div>").text().substr(0, 22) + "..."; else return $("<div>" + val + "</div>").text(); }, isFormBody: 5, type: "ue" },
        @*{
                title: '导航项目标志图片', field: 'CountryImg', width: 400, isTableBody: 4, isFormBody: 3, type: "file"
        , formatter: function (val) { return "<img width=\"150\" height=\"150\" src='@SiteConfig.SiteUrl" + val + "'/>"; }
            },*@

         {
             title: '项目介绍图片（顶部）', field: 'CountryImg2', width: 400, isTableBody: 4, isFormBody: 4, type: "file"
        , formatter: function (val) { return "<img width=\"150\" height=\"150\" src='@SiteConfig.SiteUrl" + val + "'/>"; }, Size: "700×350"
         }


        ];
        $("#grid").InitGrid("/Admin/study/LanBgYi", "语言背景移民信息管理", columns);
    })

    function ShowAddDialog() {
        alert();
    }
</script>


