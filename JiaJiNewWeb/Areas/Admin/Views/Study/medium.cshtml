
@{
    ViewBag.Title = "medium";
    Layout = "../study/layout.cshtml";
}

<table id="grid" style="width: 1024px" title="用户操作" iconcls="icon-view"></table>

<script type="text/javascript">


    $(function () {

        var columns = [{ field: 'MediumID', checkbox: true, isTableBody: 1, isFormBody: 1, type: "hidden" },   //选择
        { title: '名称', field: 'MediumName', width: 200, isTableBody: 2, isFormBody: 2, type: "text", validType: ["required", "length[2,10]"] },
        { title: '标题', field: 'MediumTitle', width: 200, isTableBody: 3, isFormBody: 3, type: "text", validType: ["required", "length[2,10]"] },
        { title: '媒体链接', field: 'MediumUrl', width: 200, isTableBody: 4, isFormBody: 4, type: "text" },
        { title: '日期', field: 'UpDate', width: 200, isTableBody: 5, isFormBody: 5, type: "date" },
        {
            title: '图片', field: 'MediumImg', width: 400, isTableBody: 6, isFormBody: 6, type: "file"
        , formatter: function (val) { return "<img width=\"100\" height=\"100\" src='@SiteConfig.SiteUrl" + val + "'/>"; }, Size: "100×100"
        }

        ];
        $("#grid").InitGrid("/Admin/study/Medium", "媒体合作管理", columns);
    })

    function ShowAddDialog() {
        alert();
    }
</script>

