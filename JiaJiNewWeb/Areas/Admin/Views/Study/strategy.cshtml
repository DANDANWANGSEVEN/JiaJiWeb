

@{
    ViewBag.Title = "strategy";
    Layout = "../study/layout.cshtml";
}

<table id="grid" style="width: 1024px" title="用户操作" iconcls="icon-view"></table>

<script type="text/javascript">


    $(function () {

        var columns = [{ field: 'StrategyID', checkbox: true, isTableBody: 1, isFormBody: 1, type: "hidden" },   //选择
        { title: '攻略标题', field: 'StrategyTitle', width: 200, isTableBody: 2, isFormBody: 2, type: "text", validType: ["required", "length[5,20]"] },
         { title: '图片', field: 'Img', width: 200, isTableBody: 3, isFormBody: 3, type: "file", formatter: function (val) { return "<img width=\"100\" height=\"100\" src='@SiteConfig.SiteUrl" + val + "'/>"; } },
        { title: '国家', field: 'CountryID', width: 80, isTableBody: 4, formatter: function (val) { return this.data[val]; }, isFormBody: 4, type: "select", url: "/Admin/study/Countryshow", valueField: "CountryID", textField: "CountryName" },
        { title: '攻略简介', field: 'StrategyProfile', width: 150, isTableBody: 5, isFormBody: 5, type: "textarea", validType: ["required", "length[5,100]"] },
        { title: '攻略关键字', field: 'StrategyKeyWord', width: 150, isTableBody: 6, isFormBody: 6, type: "text", validType: ["required", "length[5,20]"] },
        { title: '作者', field: 'StrategyAuthor', width: 100, isTableBody: 7, isFormBody: 7, type: "text", validType: ["required", "length[1,20]"] },
        { title: '阅读量', field: 'StrategyReadCount', width: 80, isTableBody: 8, type: "text", validType: ["required", "length[5,20]"] },
        { title: '发表时间', field: 'StrategyDate', width: 120, isTableBody: 9, isFormBody: 8, type: "date" },
        { title: '攻略内容', field: 'StrategyContent', width: 200, isTableBody: 10, formatter: function (val) { if ($("<div>" + val + "</div>").text().length > 22) return $("<div>" + val + "</div>").text().substr(0, 22) + "..."; else return $("<div>" + val + "</div>").text(); }, isFormBody: 9, type: "ue" },

        ];
        $("#grid").InitGrid("/Admin/study/strategy", "攻略管理", columns);
    })

    function ShowAddDialog() {
        alert();
    }
</script>


