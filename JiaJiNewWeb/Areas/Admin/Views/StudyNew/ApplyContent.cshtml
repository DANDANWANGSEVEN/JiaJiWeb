        { title: '学生学历', field: 'EducationID', width: 100, isTableBody: 4, formatter: function (val) { return this.data[val]; }, isFormBody: 4, type: "select", url: "/Admin/study/Edushow", valueField: "EducationID", textField: "EducationName" },
        { title: '申请内容', field: 'ApplyContent', width: 300, isTableBody: 5, isFormBody: 5, type: "text",validType: ["required","length[2,15]"] }


        ];
        $("#grid").InitGrid("/Admin/StudyNew/ApplyContent", "申请内容管理", columns);
    })

    function ShowAddDialog() {
        alert();
    }
</script>

