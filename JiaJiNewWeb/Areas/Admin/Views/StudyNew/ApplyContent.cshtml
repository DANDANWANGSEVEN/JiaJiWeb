
@{
    ViewBag.Title = "ApplyContent";
    Layout = "../study/layout.cshtml";
}


<table id="grid" style="width: 1024px" title="用户操作" iconcls="icon-view"></table>

<script type="text/javascript">


    $(function () {

        var columns = [{ field: 'ApplyContentID', checkbox: true, isTableBody: 1, isFormBody: 1, type: "hidden" },   //选择
        { title: '申请标题', field: 'ApplyConditionID', width: 100, isTableBody: 2, formatter: function (val) { return this.data[val]; }, isFormBody: 2, type: "select", url: "/StudyNew/applyconditionshow", valueField: "ApplyID", textField: "ApplyTitle" },
